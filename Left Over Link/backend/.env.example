# Database
# Example for PostgreSQL: "postgresql://USER:PASSWORD@HOST:PORT/DATABASE"
DATABASE_URL="postgresql://postgres:password@localhost:5432/leftoverlink"

# Auth
JWT_SECRET="YOUR_SUPER_STRONG_JWT_SECRET"
JWT_EXPIRES_IN="7d"

# Server
PORT=4000

# Email (Nodemailer) - for dev, can use Mailtrap or Ethereal
# If MOCK_EMAIL=true, these are not used
MOCK_EMAIL=true
SMTP_HOST="smtp.mailtrap.io"
SMTP_PORT=2525
SMTP_USER="your_mailtrap_user"
SMTP_PASS="your_mailtrap_pass"

# OTP (Twilio)
# If MOCK_OTP=true, these are not used
MOCK_OTP=true
TWILIO_ACCOUNT_SID="ACxxxxxxxxxxxxxx"
TWILIO_AUTH_TOKEN="xxxxxxxxxxxxxx"
TWILIO_VERIFY_SERVICE_SID="VAxxxxxxxxxxxxxx"
TWILIO_PHONE_NUMBER="+15551234567" # Your Twilio "From" number

# Storage
# 'local' or 's3' (s3 not implemented in this scaffold)
STORAGE_DRIVER="local"
SERVER_BASE_URL="http://localhost:4000"